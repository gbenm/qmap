{
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": "./src",
    "target": "ES6",
    "allowJs": true,
    "incremental": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "paths": {
      "compiler": ["compiler"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "./tests/"
  ]
}
