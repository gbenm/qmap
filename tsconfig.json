{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES6",
    "allowJs": true,
    "incremental": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@qmap/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
